@using Web.Areas.Admin.ViewModels.WhyChoose
@model WhyChooseIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">About us</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (@Model.WhyChoose != null)
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="whychoose">Create</a>
                <table class="table table-bordered mt-3" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Text</th>
                            <th>Description</th>
                            <th>Photo</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Text</th>
                            <th>Description</th>
                            <th>Photo</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                            <tr>
                                <td>@Model.WhyChoose.Id</td>
                                <td>@Model.WhyChoose.Title</td>
                                <td>@Model.WhyChoose.Text</td>
                                <td>@Model.WhyChoose.Description</td>
                                <td><img src="~/images/@Model.WhyChoose.PhotoName" style="width:100px; height:100px" /></td>
                                <td>@Model.WhyChoose.CreatedAt</td>
                                <td>@Model.WhyChoose.ModifiedAt</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="update" asp-controller="whychoose" asp-route-id="@Model.WhyChoose.Id">Update</a>
                                    <form method="post" class="btn btn-danger btn-icon-split" asp-action="delete" asp-controller="whychoose" asp-route-id="@Model.WhyChoose.Id">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                    </tbody>
                </table>
            }
            else
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="whychoose">Create</a>
            }
        </div>
    </div>
</div>
