@using Web.Areas.Admin.ViewModels.Department
@model DepartmentIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">About us</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (@Model.Departments != null)
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="department">Create</a>
                <table class="table table-bordered mt-3" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Icon</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Signature</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var ourVision in Model.Departments)
                        {
                            <tr>

                                <td>@ourVision.Id</td>
                                <td>@ourVision.Title</td>
                                <td>@ourVision.Description</td>
                                <td><img src="~/images/@ourVision.IconName" style="width:100px; height:100px" /></td>
                                <td>@ourVision.CreatedAt</td>
                                <td>@ourVision.ModifiedAt</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="update" asp-controller="department" asp-route-id="@ourVision.Id">Update</a>
                                    <form method="post" class="btn btn-danger btn-icon-split" asp-action="delete" asp-controller="department" asp-route-id="@ourVision.Id">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="department">Create</a>
            }
        </div>
    </div>
</div>
