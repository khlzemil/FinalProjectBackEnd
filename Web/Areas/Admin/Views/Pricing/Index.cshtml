@using Web.Areas.Admin.ViewModels.Pricing
@model PricingIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Statistic</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (@Model.Pricings != null)
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="pricing">Create</a>
                <table class="table table-bordered mt-3" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Sub title</th>
                            <th>Cost</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Sub title</th>
                            <th>Cost</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var pricing in Model.Pricings)
                        {
                            <tr>

                                <td>@pricing.Id</td>
                                <td>@pricing.Title</td>
                                <td>@pricing.SubTitle</td>
                                <td>@pricing.Cost</td>
                                <td>@pricing.Type</td>
                                <td>@pricing.Description</td>
                                <td>@pricing.CreatedAt</td>
                                <td>@pricing.ModifiedAt</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="update" asp-controller="pricing" asp-route-id="@pricing.Id">Update</a>
                                    <form method="post" class="btn btn-danger btn-icon-split" asp-action="delete" asp-controller="pricing" asp-route-id="@pricing.Id">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="pricing">Create</a>
            }
        </div>
    </div>
</div>
