@using Web.Areas.Admin.ViewModels.AboutUs
@model AboutUsIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">About us</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (@Model.AboutUs != null)
            {
                <table class="table table-bordered mt-3" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Slogan</th>
                            <th>Description</th>
                            <th>Signature</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Slogan</th>
                            <th>Description</th>
                            <th>Signature</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr>
                            <td>@Model.AboutUs.Id</td>
                            <td>@Model.AboutUs.Title</td>
                            <td>@Model.AboutUs.Slogan</td>
                            <td>@Model.AboutUs.Description</td>
                            <td><img src="~/images/@Model.AboutUs.IconName"  style="width:100px; height:100px"/></td>
                            <td>@Model.AboutUs.CreatedAt</td>
                            <td>@Model.AboutUs.ModifiedAt</td>
                            <td>
                                <a class="btn btn-primary" asp-action="update" asp-controller="aboutus" asp-route-id="@Model.AboutUs.Id">Update</a>
                                <form method="post" class="btn btn-danger btn-icon-split" asp-action="delete" asp-controller="aboutus" asp-route-id="@Model.AboutUs.Id">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    </tbody>
                </table>
            }
            else
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="aboutus">Create</a>
            }
        </div>
    </div>
</div>
