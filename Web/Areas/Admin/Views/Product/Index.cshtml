@using Web.Areas.Admin.ViewModels.Product
@model ProductIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Statistic</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (@Model.Products != null)
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="product">Create</a>
                <table class="table table-bordered mt-3" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Title</th>
                            <th scope="col">Price</th>
                            <th scope="col">Category</th>
                            <th scope="col">CreateAt</th>
                            <th scope="col">ModifiedAt</th>
                            <th scope="col">Photo</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Title</th>
                            <th scope="col">Price</th>
                            <th scope="col">Category</th>
                            <th scope="col">CreateAt</th>
                            <th scope="col">ModifiedAt</th>
                            <th scope="col">Photo</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>@product.Title</td>
                                <td>@product.Price</td>
                                <td>@product.ProductCategory.Title</td>
                                <td>@product.CreatedAt.ToShortDateString()</td>
                                <td>@product.ModifiedAt.ToShortDateString()</td>
                                <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/images/@product.PhotoName" /></td>

                                <td>
                                    <a class="btn btn-primary" asp-action="update" asp-controller="product" asp-route-id="@product.Id">Update</a>
                                    <form method="post" asp-action="delete" asp-controller="product" asp-route-id="@product.Id">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="product">Create</a>
            }
        </div>
    </div>
</div>
