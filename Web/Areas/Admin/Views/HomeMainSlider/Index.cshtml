@using Web.Areas.Admin.ViewModels.HomeMainSlider
@model HomeMainSliderIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">About us</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (@Model.HomeMainSliders != null)
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="homemainslider">Create</a>
                <table class="table table-bordered mt-3" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Slider photo</th>
                            <th>Url Address</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Order</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Slider photo</th>
                            <th>Url Address</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Order</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var homeMainSlider in Model.HomeMainSliders)
                        {
                            <tr>

                                <td>@homeMainSlider.Id</td>
                                <td>@homeMainSlider.Title</td>
                                <td>@homeMainSlider.Description</td>
                                <td><img src="~/images/@homeMainSlider.PhotoName" style="width:100px; height:100px" /></td>
                                <td>@homeMainSlider.UrlAdress</td>
                                <td>@homeMainSlider.CreatedAt</td>
                                <td>@homeMainSlider.ModifiedAt</td>
                                <td>@homeMainSlider.Order</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="update" asp-controller="homemainslider" asp-route-id="@homeMainSlider.Id">Update</a>
                                    <form method="post" class="btn btn-danger btn-icon-split" asp-action="delete" asp-controller="homemainslider" asp-route-id="@homeMainSlider.Id">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="homemainslider">Create</a>
            }
        </div>
    </div>
</div>
