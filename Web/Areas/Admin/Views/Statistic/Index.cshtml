@using Web.Areas.Admin.ViewModels.Statistic
@model StatisticIndexVM
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Statistic</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (@Model.Statistics != null)
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="statistic">Create</a>
                <table class="table table-bordered mt-3" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Count</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Count</th>
                            <th>Created at</th>
                            <th>Modified at</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var statistic in Model.Statistics)
                        {
                            <tr>

                                <td>@statistic.Id</td>
                                <td>@statistic.Title</td>
                                <td>@statistic.Count</td>
                                <td>@statistic.CreatedAt</td>
                                <td>@statistic.ModifiedAt</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="update" asp-controller="statistic" asp-route-id="@statistic.Id">Update</a>
                                    <form method="post" class="btn btn-danger btn-icon-split" asp-action="delete" asp-controller="statistic" asp-route-id="@statistic.Id">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="statistic">Create</a>
            }
        </div>
    </div>
</div>
