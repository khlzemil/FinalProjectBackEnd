@using Web.Areas.Admin.ViewModels.ProductCategory
@model ProductCategoryIndexVM
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Statistic</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (@Model.ProductCategories != null)
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="productcategory">Create</a>
                <table class="table table-bordered mt-3" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Title</th>
                            <th scope="col">CreateAt</th>
                            <th scope="col">ModifiedAt</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Title</th>
                            <th scope="col">CreateAt</th>
                            <th scope="col">ModifiedAt</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var productCategory in Model.ProductCategories)
                        {
                            <tr>
                                <td>@productCategory.Id</td>
                                <td>@productCategory.Title</td>
                                <td>@productCategory.CreatedAt.ToShortDateString()</td>
                                <td>@productCategory.ModifiedAt.ToShortDateString()</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="update" asp-controller="productcategory" asp-route-id="@productCategory.Id">Update</a>
                                    <form method="post" asp-action="delete" asp-controller="productcategory" asp-route-id="@productCategory.Id">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <a class="btn btn-primary" asp-action="create" asp-controller="productcategory">Create</a>
            }
        </div>
    </div>
</div>

